<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/set_element_high"
    android:clickable="true"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/standart_padding"
        android:paddingBottom="@dimen/standart_padding">

        <TextView
            android:id="@+id/filterDescription"
            style="@style/StandartTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?colorPrimary"
            tools:text="Наименование" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivBtnGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/standart_padding"
        android:layout_weight="0"
        app:srcCompat="@drawable/ic_arrow_forward"
        app:tint="?colorPrimary" />

</LinearLayout>
